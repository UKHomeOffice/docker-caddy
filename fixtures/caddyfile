# https://caddyserver.com/docs/caddyfile
0.0.0.0:2020
log stdout
errors stderr

# After this line, all other paths are relative to root.
root /home/caddy

# Render markdown files as html.
markdown /

upload /uploads {
  yes_without_tls
  to "/home/caddy"
}

# Clone a public repo once/hour.
git github.com/jumanjihouse/docker-caddy /home/caddy/docker-caddy

# Allow browsing in this dir.
browse /fixtures
